<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuPrincipal">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@BackgrougImage.jpg" />
         </image>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant>
                     <color>
                        <Color red="0.75789475440979" green="0.75789475440979" blue="0.75789475440979" />
                     </color>
                  </Light.Distant>
               </light>
            </Lighting>
         </effect>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ImageView>
      <GridPane layoutX="26.0" layoutY="124.0" prefHeight="250.0" prefWidth="331.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="195.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="buttonContinue" onMouseClicked="#buttonContinueClick" prefHeight="62.0" prefWidth="392.0" text="Continuar Jogo" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
            <Label fx:id="buttonConfig" layoutX="10.0" layoutY="72.0" onMouseClicked="#buttonConfigClick" prefHeight="62.0" prefWidth="392.0" text="Configurações" textAlignment="CENTER" textFill="WHITE" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
            <Label fx:id="buttonStart" layoutX="10.0" layoutY="10.0" onMouseClicked="#buttonStartClick" prefHeight="62.0" prefWidth="392.0" text="Novo Jogo" textAlignment="CENTER" textFill="WHITE" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="39.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </children>
</AnchorPane>
